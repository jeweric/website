@import "../variables";
@import "../font";
@import "../mixins";

.list-items{
	ul{
		li{
			a{
				margin:$gap3;
				@include display-box-flex();
				border-bottom:1px solid #f7f7f7;
				position: relative;
				padding-bottom:15px;
				.left{
					width:80px;
				}
				.right{
					@include box-flex(1);
					h3{
						padding-top:0;
						padding-right:0;
						font-weight:normal;
					}
				}
				.time{
						position: absolute;
						bottom: $gap2;
						right: 0;
						color:$gray4;
						font-size: $fontsize4;
				}
				.info{
					font-size: $fontsize5;
					padding-right:5px;
				}
				
			}
			a:active{
				background-color: $grayf5;
			}
		}
	}
}