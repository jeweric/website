@charset "UTF-8";
/**
 * 底部样式
 * 
 *
 * @author: chengwenjing
 * @create: 2014-07-30
 * @update: 2014-07-30
 */

$orangeColor: #f99d1c;
$greenColor: #1dbd8d;
$gap1: 10px;
$gap2: 20px;
$fs32: 32px;
$maxWidth: 640px;
$height: 100px;
$btnHeight: 80px;
$radius: 8px;
$white: #fff;
$btnWidth1: 334px;
$btnWidth2: 247px;
$leftGap: $gap1 0 $gap1 $gap2;
$rightGap: $gap1 $gap2 $gap1 0;

#footer {
	position: fixed;
	bottom: 0;
	height: $height;
	width: $maxWidth;
	margin: 0 auto;
	background: $white;	

	.area-left {
		float: left;
		margin: $leftGap;
	}

	.area-right { 
		float: right;
		margin: $rightGap; 
		width: $btnWidth2;
	}

	.footer-btn {
		height: $btnHeight;
		border-radius: $radius;
		text-align: center;
		color: $white;
		line-height: $btnHeight;
		font-size: $fs32;
	}

	.right-btn {
		float: right;
		margin: $rightGap;
		height: $btnHeight;
		width: $btnWidth1;
		background-color: $orangeColor;
		border-radius: $radius;
		text-align: center;
		color: $white;
		line-height: $btnHeight;
		font-size: $fs32;
	}

	.left-btn {
		float: left;
		width: $btnWidth2;
		background-color: $greenColor;
		margin: $leftGap;
		height: $btnHeight;
		line-height: $btnHeight;
		text-align: center;
		border-radius: $radius;
		font-size: $fs32;
		color: $white;
	}

	.width-big {
		width: $btnWidth1;
	}

	.width-small {
		width: $btnWidth2;
	}

	.orange-btn {
		background-color: $orangeColor;
	}

	.green-btn {
		background-color: $greenColor;
	}

	.single-btn {
		margin: $gap1 $gap2;
		height: $btnHeight;
		border-radius: $radius;
		text-align: center;
		color: $white;
		line-height: $btnHeight;
		font-size: $fs32;
		background-color: $orangeColor;
	}
}