@charset "utf-8";
// 日历控件
// @author 孔祥鹏
// @time 2014-08-12
.skin30{
    .tn-calendar{
        width:100%;
        overflow:hidden;
        .tn-c-header{
            text-align:center;
            height:35px;
            line-height:35px;
            font-size:1.6rem;
            color:#333;
            margin-bottom: 10px;
            .icon-arrow-right{
                float:right;
                padding:24px;
                color:#ff6000;
            }
            .icon-arrow-left{
                float:left;
                padding:24px;
                color:#ff6000;
            }
        }
        .tn-c-title{
            font-family: "Arial";
        }
        .tn-c-body{
            clear:both;
        }
        .tn-c-body{
            table, tbody{
                width:100%;
                margin-bottom: 20px;
            }
            th{
                text-align:center;
                height:25px;
                vertical-align:middle;
                font-size:1.4rem;
                color:#666;
            }
            td{
                position: relative;
                text-align:center;
                width:14.3%;
                height:58px;
                vertical-align:middle;
                border: 2px solid #d0d0d0;
                font-size:1.5rem;
                color:#000000;
                font-family:"Arial";
                div{
                    height: 38px;
                    line-height: 38px;
                    width: 38px;
                    margin-left: 12px;
                }
                .price{
                    width: 100%;
                    text-align: center;
                    position: absolute;
                    bottom: -10px;
                    left: 0px;
                    font-size:1.2rem;
                    color: #ff851b;
                }
                &.disabled{
                    color:#999;
                }
                &.normal{
                    color:#ff6000;
                }
                &.selected{
                    color:#ffffff;
                    .price{
                        color:#1dbd8d;
                    }
                    div{
                        border-radius: 50px;
                        background:#1dbd8d;
                    }
                }
              &.today:before{
                 content: "今天";
                 position: relative;
                 left: 10px;
                 color: #000000;
              }
              &.today{
               color: transparent;
              }

            }
            tr{
                &:nth-child(2){
                    td{
                        border-top:none;
                    }
                }
                td{
                    border:none;
                    &:first-child{
                        border-left:none;
                    }
                    &:last-child{
                        border-right:none;
                    }
                }
            }
        }
    }
}